@model Player

@{
    ViewData["Title"] = "Add Player";
}

<h1 class="display-4">Add Player</h1>

<form asp-action="Add" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="PlayerName"></label>
        <input asp-for="PlayerName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="League"></label>
        <select asp-for="LeagueId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Leagues,"LeagueId","Name"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="Team"></label>
        <select asp-for="TeamId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Teams,"TeamId","TeamName"))"></select>
    </div>
    <button type="submit" class="btn btn-dark">Add</button>
    <a asp-action="Index" asp-controller="Player" class="btn btn-outline-dark">Cancel</a>
</form>