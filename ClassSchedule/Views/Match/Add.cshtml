@model Match

@{
    ViewData["Title"] = $"{ViewBag.Operation} Match";
}

<h1 class="display-4">@ViewBag.Operation Match</h1>

<form asp-action="Add" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Number"></label>
        <input asp-for="Number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MilitaryTime"></label>
        <input asp-for="MilitaryTime" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="League"></label>
        <select asp-for="LeagueId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Leagues,"LeagueId","Name"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="HomeTeam"></label>
        <select asp-for="TeamId1" class="form-control"
                asp-items="@(new SelectList(ViewBag.Teams,"TeamId","TeamName"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="Player1"></label>
        <select asp-for="PlayerId1" class="form-control"
                asp-items="@(new SelectList(ViewBag.Players,"PlayerId","Name"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="Player2"></label>
        <select asp-for="PlayerId2" class="form-control"
                asp-items="@(new SelectList(ViewBag.Players,"PlayerId","Name"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="AwayTeam"></label>
        <select asp-for="TeamId1" class="form-control"
                asp-items="@(new SelectList(ViewBag.Teams,"TeamId","TeamName"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="Player3"></label>
        <select asp-for="PlayerId3" class="form-control"
                asp-items="@(new SelectList(ViewBag.Players,"PlayerId","Name"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="Player4"></label>
        <select asp-for="PlayerId4" class="form-control"
                asp-items="@(new SelectList(ViewBag.Players,"PlayerId","Name"))"></select>
    </div>

    @if (ViewBag.Operation == "Edit")
    {
        <input type="hidden" asp-for="MatchId" />
    }

    <button type="submit" class="btn btn-dark">@ViewBag.Operation</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark">Cancel</a>
</form>